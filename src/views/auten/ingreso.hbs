<main class="container-fluid px-0 fondo1 py-4">
    <div class="container justify-content-center align-self-center text-light py-4">
        <h1 class="text-center">¡Bienvenido!</h1>
        <form action="/ingreso" method="POST">
            <div class="form-row">
                <div class="form-group col-lg-4 m-0"></div>
                <div class="form-group col-lg-4">
                    <label for="rucE" class="ml-0">RUC / DNI*:</label>
                    <input type="number" class="form-control" name="codigo" id="codigo" placeholder="Ingrese su RUC / DNI " required>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-lg-4 m-0"></div>
                <div class="form-group col-lg-4">
                    <label for="contraE" class="ml-0">Contraseña*:</label>
                    <div class="row">
                        <div class="col pr-0">
                            <input type="password" class="form-control" name="contrasena" id="contrasena" placeholder="Ingrese su contraseña" required>
                        </div>
                        <button class="btn btn-primary mr-3" type="button" onclick="mostrarContrasena()">Observar</button>
                    </div>
                </div>
            </div>

            {{#if message}}
                <div class="alert alert-danger alert-dismissible fade col-lg-4 mx-auto show" role="alert">
                    {{message}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {{/if}}

            <div class="container text-center">
                <button type="submit" class="btn">INGRESAR</button>
                <div class="col-lg m-0 mt-4">
                    <p class="m-0">¿No tiene cuenta?</p>
                </div>
                <div class="col-lg m-0">
                    <p class="m-0">Regístrate: </p>
                </div>
                <div class="col-lg m-0">
                    <a href="/registroE" style="color: white;">Empresa</a> | 
                    <a href="/registroP" style="color: white;">Persona</a>
                </div>
            </div>
        </form>
    </div>
</main>
<script>
  function mostrarContrasena(){
      var tipo = document.getElementById("contrasena");
      if(tipo.type == "password"){
          tipo.type = "text";
      }else{
          tipo.type = "password";
      }
  }
</script>